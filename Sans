   lolo.MeshType = "Sphere"
   task.wait(0.15)
   for i=1,6 do sfo.Transparency -= 0.1 sfx.CFrame = game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart").CFrame * CFrame.new(math.pi * 0,2.45,-5) task.wait()   end  task.wait(.5) sfo:Destroy()
    end)
   delay(0.75, function()
    for i=1,10 do sfx.Transparency += 0.1  task.wait()
    end sfx:Destroy()
Anim:Stop()
end)
