local sfx = Instance.new("Part",workspace) 
sfx.Transparency = 1
sfx.Anchored = true
sfx.Size = Vector3.new(4,6,6) 
sfx.BrickColor = BrickColor.new("White") 
local ms = Instance.new("SpecialMesh",sfx)
ms.Scale = Vector3.new(1.75,1.75,1.75)
